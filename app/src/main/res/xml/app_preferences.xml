<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        app:key="battle_category"
        app:title="@string/p_script_mode_battle">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_radio"
            app:key="@string/pref_skill_conf"
            app:title="@string/p_skill_confirmation" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_fast_forward"
            app:key="@string/pref_story_skip"
            app:title="@string/p_story_skip" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_exit_run"
            app:key="@string/pref_withdraw_enabled"
            app:title="@string/p_enable_withdraw" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_card"
            app:key="@string/pref_stop_on_ce_drop"
            app:title="@string/p_stop_on_ce_drop"
            app:summary="@string/p_experimental" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_card"
            app:key="@string/pref_stop_on_ce_get"
            app:title="@string/p_stop_on_ce_get"
            app:summary="@string/p_stop_on_ce_get_summary" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_screenshot"
            app:key="@string/pref_screenshot_drops"
            app:title="@string/p_screenshot_drops"
            app:summary="@string/p_screenshot_drops_summary" />

        <ListPreference
            app:defaultValue="-1"
            app:icon="@drawable/ic_boost"
            app:key="@string/pref_boost_item"
            app:title="@string/p_boost_item"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_wand"
            app:key="@string/pref_battle_config_cmd_text"
            app:title="@string/p_battle_config_cmd_text"
            app:summary="@string/p_battle_config_cmd_text_summary" />

        <!--    <SwitchPreferenceCompat-->
        <!--        app:defaultValue="false"-->
        <!--        app:key="@string/pref_guda_final"-->
        <!--        app:summary="Support for the new rewards screen on JP"-->
        <!--        app:title="GudaGuda Final Rerun" />-->
    </PreferenceCategory>

    <PreferenceCategory
        app:key="gift_box_category"
        app:title="@string/p_script_mode_gift_box">
        <SeekBarPreference
            android:max="4"
            app:icon="@drawable/ic_refresh"
            app:key="@string/pref_max_gold_ember_set_size"
            app:min="0"
            app:defaultValue="1"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="@string/p_max_gold_ember_set_size" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="storage_category"
        app:title="Storage">
        <Preference
            app:key="@string/pref_nav_storage"
            app:title="@string/p_folder"
            app:icon="@drawable/ic_folder_edit" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="app_category"
        app:title="@string/p_advanced">
        <Preference
            app:key="@string/pref_nav_fine_tune"
            app:title="@string/p_fine_tune"
            app:icon="@drawable/ic_tune" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/pref_debug_mode"
            app:icon="@drawable/ic_bug"
            app:summary="@string/p_debug_mode_summary"
            app:title="@string/p_debug_mode" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/pref_ignore_notch"
            app:summary="@string/p_ignore_notch_summary"
            app:title="@string/p_ignore_notch"
            app:icon="@drawable/ic_notch" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/pref_record_screen"
            app:icon="@drawable/ic_video"
            app:summary="@string/p_record_screen_summary"
            app:title="@string/p_record_screen" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_key"
            app:key="@string/pref_use_root_screenshot"
            app:summary="@string/p_root_screenshot_summary"
            app:title="@string/p_root_screenshot" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_launch"
            app:key="@string/pref_auto_start_service"
            app:title="@string/p_auto_start_service" />
    </PreferenceCategory>
</PreferenceScreen>