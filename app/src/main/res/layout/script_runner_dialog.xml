<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/script_runner_dialog_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/script_runner_dialog_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="?android:attr/colorBackground"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/script_runner_dialog_btn_positive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/script_runner_dialog_title"
        app:layout_constraintWidth_max="400dp" />

    <TextView
        android:id="@+id/script_runner_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toTopOf="@id/script_runner_dialog_content"
        app:layout_constraintEnd_toEndOf="@id/script_runner_dialog_card"
        app:layout_constraintStart_toStartOf="@id/script_runner_dialog_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title" />

    <Button
        android:id="@+id/script_runner_dialog_btn_positive"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/script_runner_dialog_card"
        app:layout_constraintTop_toBottomOf="@id/script_runner_dialog_content"
        tools:text="@android:string/ok"
        tools:visibility="visible" />

    <Button
        android:id="@+id/script_runner_dialog_btn_negative"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/script_runner_dialog_btn_positive"
        app:layout_constraintEnd_toStartOf="@id/script_runner_dialog_btn_positive"
        tools:text="@android:string/cancel"
        tools:visibility="visible" />

    <Button
        android:id="@+id/script_runner_dialog_btn_neutral"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/script_runner_dialog_btn_positive"
        app:layout_constraintStart_toStartOf="@id/script_runner_dialog_card"
        tools:text="Neutral"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/script_runner_dialog_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/script_runner_dialog_btn_positive"
        app:layout_constraintEnd_toEndOf="@id/script_runner_dialog_card"
        app:layout_constraintStart_toStartOf="@id/script_runner_dialog_card"
        app:layout_constraintTop_toBottomOf="@id/script_runner_dialog_title">

        <TextView
            android:id="@+id/script_runner_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            tools:text="Message" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>