<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/script_ctrl_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:theme="@style/AppTheme">

    <ImageButton
        android:id="@+id/script_pause_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:minWidth="0sp"
        android:minHeight="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_pause" />

    <ImageButton
        android:id="@+id/script_toggle_btn"
        android:layout_width="@dimen/script_runner_btn_size"
        android:layout_height="@dimen/script_runner_btn_size"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:minWidth="0sp"
        android:minHeight="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play" />
</LinearLayout>