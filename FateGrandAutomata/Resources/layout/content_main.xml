
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:paddingHorizontal="10dip">

  <DraggableListView.DraggableListView
    android:id="@+id/card_priority_lv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <Button
    android:id="@+id/service_toggle_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:text="TOGGLE SERVICE"
    android:drawableLeft="@drawable/ic_launch"/>

  <Button
    android:id="@+id/configure_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/action_settings"
    android:drawableLeft="@drawable/ic_settings"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center">
    <FrameLayout
      android:id="@+id/main_pref_frame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</LinearLayout>