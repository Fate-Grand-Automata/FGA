<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servant_txt"
            android:text="Servant(s)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"/>

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/image_servant_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/servant_txt"
            android:layout_marginTop="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_servant_0"
            android:inputType="text"
            tools:text="Servant 0"
            app:layout_constraintTop_toTopOf="@+id/image_servant_0"
            app:layout_constraintStart_toEndOf="@+id/image_servant_0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/image_servant_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_servant_0"
            android:layout_marginTop="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_servant_1"
            android:inputType="text"
            tools:text="Servant 1"
            app:layout_constraintTop_toTopOf="@+id/image_servant_1"
            app:layout_constraintStart_toEndOf="@+id/image_servant_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ce_txt"
          android:text="Craft Essence(s)"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text_servant_1"
          android:layout_marginTop="32dp"
          android:textSize="20sp"/>

        <ImageView
          android:src="@android:drawable/ic_menu_gallery"
          android:layout_width="120dp"
          android:layout_height="60dp"
          android:id="@+id/image_ce_0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ce_txt"
          android:layout_marginTop="16dp"/>
        <EditText
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/text_ce_0"
          android:inputType="text"
          tools:text="CE 0"
          app:layout_constraintTop_toTopOf="@+id/image_ce_0"
          app:layout_constraintStart_toEndOf="@+id/image_ce_0"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginLeft="16dp"/>

        <ImageView
          android:src="@android:drawable/ic_menu_gallery"
          android:layout_width="120dp"
          android:layout_height="60dp"
          android:id="@+id/image_ce_1"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/image_ce_0"
          android:layout_marginTop="16dp"/>
        <EditText
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/text_ce_1"
          android:inputType="text"
          tools:text="CE 1"
          app:layout_constraintTop_toTopOf="@+id/image_ce_1"
          app:layout_constraintStart_toEndOf="@+id/image_ce_1"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginLeft="16dp"/>

         
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btn_support_img_rename"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="@dimen/fab_margin"
    app:srcCompat="@drawable/ic_check" />
</androidx.constraintlayout.widget.ConstraintLayout>